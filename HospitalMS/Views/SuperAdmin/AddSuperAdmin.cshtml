@model SuperAdminViewModel
@{
    ViewData["Title"] = "Add New Super Admin";
}

<div class="container py-5">
    <h1 class="text-center mb-4">Add New Super Admin</h1>
    <hr class="mb-5" />

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <p class="text-muted text-center mb-4">Fill in the data below.</p>
                    <form class="needs-validation" novalidate asp-action="SaveSuperAdmin" asp-controller="SuperAdmin" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <!-- First Name -->
                        <div class="mb-3">
                            <label asp-for="FName" class="form-label fw-bold">First Name</label>
                            <input class="form-control" type="text" asp-for="FName" placeholder="First Name" required />
                            <span asp-validation-for="FName" class="text-danger"></span>
                        </div>

                        <!-- Last Name -->
                        <div class="mb-3">
                            <label asp-for="LName" class="form-label fw-bold">Last Name</label>
                            <input class="form-control" type="text" asp-for="LName" placeholder="Last Name" required />
                            <span asp-validation-for="LName" class="text-danger"></span>
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold">Email</label>
                            <input class="form-control" type="email" asp-for="Email" placeholder="E-mail Address" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Phone -->
                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label fw-bold">Phone</label>
                            <input class="form-control" type="tel" asp-for="Phone" placeholder="Phone Number" required pattern="^\+?[1-9]\d{1,14}$" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <!-- Upload Image -->
                        <div class="mb-3">
                            <label asp-for="Image" class="form-label fw-bold">Upload Image</label>
                            <input class="form-control" type="file" asp-for="Image" />
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>

                        <!-- Birth Date -->
                        <div class="mb-3">
                            <label asp-for="BirthDate" class="form-label fw-bold">Birth Date</label>
                            <input class="form-control" type="date" asp-for="BirthDate" required />
                            <span asp-validation-for="BirthDate" class="text-danger"></span>
                        </div>

                        <!-- Username -->
                        <div class="mb-3">
                            <label asp-for="Username" class="form-label fw-bold">Username</label>
                            <input class="form-control" type="text" asp-for="Username" placeholder="Username" required />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <!-- Password -->
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fw-bold">Password</label>
                            <input class="form-control" type="password" value="@Model.Password" asp-for="Password" placeholder="Password" required />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <!-- Confirm Password -->
                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label fw-bold">Confirm Password</label>
                            <input class="form-control" type="password" value="@Model.Password" asp-for="ConfirmPassword" placeholder="Confirm Password" required />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <!-- Gender -->
                        <div class="mb-3">
                            <label class="form-label fw-bold">Gender</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" value="Female" asp-for="Gender" id="female" />
                                <label class="form-check-label" for="female">Female</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" value="Male" asp-for="Gender" id="male" />
                                <label class="form-check-label" for="male">Male</label>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Add Super Admin</button>
                        </div>
                    </form>

                    <div class="mt-3 text-center">
                        <a asp-action="SuperAdminPage" asp-controller="SuperAdmin" class="btn btn-link">Back to Dashboard</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

