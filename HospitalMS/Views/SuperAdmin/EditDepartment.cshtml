@model HospitalMS.Models.Department

@{
    ViewData["Title"] = "EditDepartment";
}

<h1>Edit @ViewBag.depName Department</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveDepartmentEdit" asp-route-currentimage="@ViewBag.currentImage">
            <div asp-validation-summary="All" class="text-danger"></div>

                <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label fw-bold"></label>
                <textarea asp-for="Description" rows="20" class="form-control" placeholder="Enter a brief description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="col-md-12">
                <label asp-for="image">Upload Image</label>
                <br /> <br />
                <input class="form-control" type="file" value="@Model.image" asp-for="@Model.image">
                <br />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="SuperAdminPage">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
