                                }
                                @if (User.IsInRole("Patient"))
                                {
                            <li class="nav__item">
                                <a class="nav__item-link" asp-area="" asp-controller="Patient" asp-action="PatientProfile" asp-route-PatientId="1">Profile</a>
                            </li><!-- /.nav-item -->
                                
                            <li class="nav__item">
                                <a class="nav__item-link" asp-area="" asp-controller="Patient" asp-action="ShowAppointments">Appointments</a>
                            </li><!-- /.nav-item -->
                                }
                            
                                
                            @* <li class="nav__item">
                            <a href="contact-us.html" class="nav__item-link">Contacts</a>
                            </li><!-- /.nav-item --> *@

                       
