                        {
                            <a asp-action="SignOut" asp-controller="Account" class="btn btn__primary btn__rounded ml-30">
                                <i class="icon-calendar"></i>
                                <span>Sign Out</span>
                            </a>
                        }
                        else
                        {
                            
                            <a asp-action="Register" asp-controller="Account" class="btn btn__primary btn__rounded ml-30">
                                <i class="icon-calendar"></i>
                                <span>Register</span>
                            </a>
                            <a asp-action="Login" asp-controller="Account" class="btn btn__primary btn__rounded ml-30">
                                <i class="icon-calendar"></i>
                                <span>Login</span>
                            </a>
                        }
