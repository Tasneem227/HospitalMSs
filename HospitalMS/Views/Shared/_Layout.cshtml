                                        <a class="nav__item-link" asp-area="" asp-controller="Admin" asp-action="AllPatients">Hospital Patients</a>
                                            </li><!-- /.nav-item -->
                                    <li class="nav__item">
                                        <a class="nav__item-link" asp-area="" asp-controller="SuperAdmin" asp-action="ViewAllDeptDoctors">Hospital Doctors</a>
                                    </li>
                                    <li class="nav__item">
                                        <a class="nav__item-link" asp-area="" asp-controller="SuperAdmin" asp-action="ViewAllDeptNurses">Hospital Nurses</a>
                                    </li>
                                    <li class="nav__item">
                                        <a class="nav__item-link" asp-area="" asp-controller="SuperAdmin" asp-action="ViewAllAdmins">Hospital Admins</a>
                                    </li>

