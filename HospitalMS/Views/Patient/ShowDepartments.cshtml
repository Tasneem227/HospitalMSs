@model List<Department>
@{
    ViewData["Title"] = "Show Departments";
}

<!-- Enhanced Header -->
<div class="text-center mb-5 bg-primary text-light py-5 rounded">
    <h1 class="display-4 mb-3">Our Departments</h1>
    <div class="mb-3">
        <i class="fas fa-clinic-medical fa-3x"></i>
    </div>
</div>

<!-- Departments List -->
<div class="container">
    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-12">
                <div class="card shadow-lg w-80">
                    <!-- Department Title -->
                    <div class="card-header bg-primary text-light text-center py-3">
                        <h5 class="card-title mb-0">@item.Name</h5>
                    </div>
                    <div class="align-content-center text-center">
                    <!-- Department Image -->
                    <img src="~/Images/Department/@item.image"
                         alt="Department Photo"
                         class="card-img-top img-fluid align-content-center"
                         style="object-fit: cover; height: 350px; font:20px;  text-align:center">
                    </div>
                    <!-- Department Description -->
                    <div class="card-body ">
                        <pre class="card-text text-dark">@item.Description</pre>

                       <div class="align-content-center">
                           <br/>
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

                        <a asp-action="ShowDepartmentDoctors"
                           asp-controller="Patient"
                           asp-route-DeptId="@item.Id"
                           class="btn btn-primary ">Meet Our Doctors</a>
                           </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Custom CSS for Effects -->
<style>
    .card {
        width: 100%; /* Make the card span full width */
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
        }

    .card-img-top {
        height: 300px;
        object-fit: cover;
    }

        .card-img-top:hover {
            transform: scale(1.03);
            transition: transform 0.3s ease-in-out;
        }
</style>
